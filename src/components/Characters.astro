---
import { getCharacters } from "rickmortyapi"

const res = await getCharacters({ species: "Human", status: "Alive" })
const characters = res.data.results
---

<ul class="grid grid-cols-1 gap-4 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4">
  {
    characters?.map((character) => (
      <li class="flex items-center gap-2">
        <img src={character.image} alt={character.name} class="h-16 w-16 rounded-full" />
        <div>
          <h3 class="text-lg font-bold">{character.name}</h3>
          <p class="text-gray-500 text-sm">{character.species}</p>
        </div>
      </li>
    ))
  }
</ul>
