---
import { User } from "@phosphor-icons/react"

import { CharacterInfo } from "@/components/characters/character-info"
import Hero from "@/components/commons/hero.astro"
import Layout from "@/layouts/layout.astro"
import Root from "@/layouts/root.astro"
import { getTranslation } from "@/utils/i18n"

export async function getStaticPaths() {
  return [{ params: { lang: "en" } }, { params: { lang: "pt" } }]
}

const { t } = getTranslation(Astro.currentLocale)
---

<Root
  title={t("pages.character.title")}
  description={t("pages.character.description")}
  keywords={t("pages.character.keywords")}
>
  <Layout>
    <Hero title={t("pages.character.title")} description={t("pages.character.description")}>
      <User slot="icon" />
    </Hero>
    <CharacterInfo client:load />
  </Layout>
</Root>
