---
import Meta from "./Meta.astro"

import { ClientRouter } from "astro:transitions"

import "../styles/global.css"
import type { Props as MetaProps } from "./Meta.astro"
import type { Locale } from "@/utils/i18n"

import { $locale } from "@/stores/locale"

interface Props extends MetaProps {}

const props = Astro.props
const currentLocale = props.locale ?? Astro.currentLocale ?? "en"

$locale.set(currentLocale as Locale)
---

<!doctype html>
<html lang={currentLocale}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/astro-blog/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <Meta {...props} />
    <ClientRouter />
  </head>
  <slot />
</html>

<script>
  import type { Locale } from "@/utils/i18n"

  import { $locale } from "@/stores/locale"
  import { $theme } from "@/stores/theme"

  const lang = document.documentElement.lang
  $locale.set(lang as Locale)

  $theme.subscribe((theme) => {
    document.documentElement.dataset.theme = theme
  })
</script>
