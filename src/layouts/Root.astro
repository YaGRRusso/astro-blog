---
import Meta from "./Meta.astro"

import { ClientRouter } from "astro:transitions"

import type { Props as MetaProps } from "./Meta.astro"

import "../styles/global.css"
import { initializeLocale } from "@/stores/locale"

interface Props extends MetaProps {}

const props = Astro.props
const currentLocale = props.locale ?? Astro.currentLocale ?? "en"

initializeLocale(currentLocale)
---

<!doctype html>
<html lang={currentLocale}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/astro-blog/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <Meta {...props} />
    <ClientRouter />
  </head>
  <slot />
</html>

<script>
  import { $theme } from "@/stores/theme"

  $theme.subscribe((theme) => {
    document.documentElement.dataset.theme = theme
  })
</script>
