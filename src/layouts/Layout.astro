---
import { LanguageSelect } from "@/components/LanguageSelect"
import { ThemeSwitch } from "@/components/ThemeSwitch"

const locale = Astro.currentLocale
---

<body class="flex min-h-screen flex-col bg-base-100 text-base-content">
  <main class="container flex flex-1 flex-col items-center justify-center gap-4">
    <LanguageSelect currentLocale={locale} client:load />
    <ThemeSwitch client:load />
    <slot />
  </main>
</body>
